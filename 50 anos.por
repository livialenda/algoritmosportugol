programa {
  cadeia nome
  inteiro ano, idade, diferenca
  funcao inicio() {
      escreva ("qual o seu nome?\n")
      leia (nome)
      escreva ("qual seu ano de nascimento\n")
      leia (ano)
      idade = (2024-ano)
      diferenca = (50-idade)
      escreva ("ola " + nome + " voce tem " + idade + " voce fazera 50 anos daqui a " + diferenca + " anos ")
  }
}
